<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    tools:context=".screens.ConvertCurrencyFragment">


    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_back_theme"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:id="@+id/layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@id/ic_back"
        android:fontFamily="@font/cabin_semibold"
        android:text="Convert Currency"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_name"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/country_image1"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/currency_code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/cabin_semibold"
                android:layout_below="@id/country_image1"
                android:layout_marginTop="8dp"
                android:textSize="28sp"
                android:text="RUB"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/amount_currency1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/cabin"
                android:layout_below="@id/currency_code1"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:text="1"
                />
            <ImageView
                android:id="@+id/edit_amount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toEndOf="@id/amount_currency1"
                android:layout_alignTop="@id/amount_currency1"
                android:layout_alignBottom="@id/amount_currency1"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_edit"/>

            <ImageView
                android:id="@+id/converter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow"
                android:background="@drawable/convert_icon_theme"
                android:padding="17dp"/>

            <ImageView
                android:id="@+id/country_image2"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:src="@drawable/uz"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/amount_currency2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/cabin"
                android:layout_above="@id/country_image2"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:text="1200"
                />
            <TextView
                android:id="@+id/currency_code2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/amount_currency2"
                android:layout_marginBottom="8dp"
                android:textSize="28sp"
                android:text="UZS"
                android:fontFamily="@font/cabin_semibold"
                android:textColor="@color/black"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>